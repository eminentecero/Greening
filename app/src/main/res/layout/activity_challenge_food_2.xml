    <!-- 뒤로가기 : imgBack -->
    <!-- 음식챌린지 : foodChallenge -->
    <!-- 음식챌린지 관련 설명... : explnFood -->
    <!-- 각 챌린지 목록 : challenge1, 2, 3... -->
    <!-- 챌린지 추가 플로팅 버튼 : addChallenge -->

    <!-- 벡터 사용했어요!! drawable 파일에 있습니다. -->
    <!-- 뒤로가기, 별(아웃라인, 필), 사람, 달력, 플러스 사용했습니다. -->

    <!-- Title -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7.5">

        <!-- 뒤로가기: 챌린지 화면으로 이동 -->
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/foodChallenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgBack"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:text="음식챌린지"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/explnFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodChallenge"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            android:text="운동챌린지 관련 설명... 운동챌린지 관련 설명...\n운동챌린지 관련 설명... 운동챌린지 관련 설명..."
            android:textSize="14sp" />
    </RelativeLayout>


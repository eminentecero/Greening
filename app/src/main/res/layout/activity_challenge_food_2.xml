                                android:text="챌린지 제목"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/KeyWordTextView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="28dp"
                                android:text="#키워드 #키워드 #키워드"
                                android:textSize="15sp" />

